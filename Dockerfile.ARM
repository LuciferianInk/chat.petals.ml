FROM arm64v8/debian:stable

MAINTAINER BigScience

RUN apt-get update \
    && DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
    curl \
    git \
    gcc \
    g++ \
    sed \
    tar \
    zlib1g-dev \
    python3-dev \
    python3-pip \
    python3.11-venv \
    wget \
    build-essential \
    software-properties-common \
    checkinstall \
    libssl-dev \
    libffi-dev \
    openssl \
    && rm -rf /var/lib/apt/lists/*

